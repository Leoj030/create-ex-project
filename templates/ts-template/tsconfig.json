{
    "compilerOptions": {
        "target": "ES2023",
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "baseUrl": "./",
        "paths": {},
        "types": ["jest", "node"],
        "resolveJsonModule": true,
        "sourceMap": true,
        "outDir": "./dist",
        "isolatedModules": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*", "tests/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts", "dist"]
}
